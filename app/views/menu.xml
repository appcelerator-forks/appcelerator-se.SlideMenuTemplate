<Alloy>
	<View class="container">
		<View id="btnProfile" class="span-width top" page="profile">
			<View class="menu-btn-background" touchEnabled="false" />
			<Widget class="size menuHeaderIcon" src="net.hoyohoyo.iconiclabel" icon="icon-user" touchEnabled="false" />
			<Label class="size white profile" touchEnabled="false">My Profile</Label>
		</View>
		<TableView id="tableView" class="container">
			<TableViewSection headerView="menuSectionHeader">
				<TableViewRow className="menuRow" page="home">
					<Widget class="menuIcon" src="net.hoyohoyo.iconiclabel" icon="icon-home"/>
					<Label>Home</Label>
					<View class="white-line transparent" />
				</TableViewRow>
				<TableViewRow className="menuRow" page="briefcase">
					<Widget class="menuIcon" src="net.hoyohoyo.iconiclabel" icon="icon-briefcase"/>
					<Label>Briefcase</Label>
					<View class="white-line transparent" />
				</TableViewRow>
				<TableViewRow className="menuRow" page="locations">
					<Widget class="menuIcon" src="net.hoyohoyo.iconiclabel" icon="icon-map-marker" />
					<Label>Locations</Label>
					<View class="white-line transparent" />
				</TableViewRow>
				<TableViewRow className="menuRow" page="photos">
					<Widget class="menuIcon" src="net.hoyohoyo.iconiclabel" icon="icon-picture" />
					<Label>Photos</Label>
					<View class="white-line transparent" />
				</TableViewRow>
			<TableViewSection>
		</TableView>
		<View id="settingsView" class="vgroup footer" zIndex='1000'>
			<View id="settingsBtn" class="span-width">
				<View id="footerBkg" class="menu-btn-background" touchEnabled="false"/>
				<Widget class="size menuHeaderIcon" src="net.hoyohoyo.iconiclabel" icon="icon-cog" touchEnabled="false"/>
				<Label class="size white profile" touchEnabled="false">Settings</Label>
			</View>
		</View>
	</View>
</Alloy>